<?xml version="1.0" encoding="UTF-8" ?>
<tiles>
    <tile name="simple add">
        <in bind="t3">
            <BinOp type="PLUS">
                <Expr bind="t1"/>
                <Expr bind="t2"/>
            </BinOp>
        </in>
        <out>
            <AsmMove>
                <Register name="t3"/>
                <Register name="t1"/>
            </AsmMove>
            <AsmAdd>
                <Register name="t3"/>
                <Register name="t2"/>
            </AsmAdd>
        </out>
    </tile>
    <tile name="simple move">
        <in>
            <Move>
                <Temp bind="t1"/>
                <Expr bind="t2"/>
            </Move>
        </in>
        <out>
            <AsmMove>
                <Register name="t1"/>
                <Register name="t2"/>
            </AsmMove>
        </out>
    </tile>
    <tile name="move const to mem sum">
        <in>
            <Move>
                <Mem>
                    <BinOp type="PLUS">
                        <Expr bind="t1"/>
                        <Expr bind="t2"/>
                    </BinOp>
                </Mem>
                <Const bind="c"/>
            </Move>
        </in>
        <out>
            <AsmMove>
                <Memory type="PLUS-EXPR">
                    <Register name="t1"/>
                    <Register name="t2"/>
                </Memory>
                <Imm val="c"/>
            </AsmMove>
        </out>
    </tile>
    <tile name="TODO">
        <in>
            <Move>
                <Temp bind="t1"/>
                <BinOp type="PLUS">
                    <Temp bind="t1"/>
                    <Mem>
                        <BinOp type="PLUS">
                            <Temp bind="fp"/>
                            <Const bind="c"/>
                        </BinOp>
                    </Mem>
                </BinOp>
            </Move>
        </in>
        <out>
            <AsmAdd>
                <Register name="t1"/>
                <Memory type="PLUS-EXPR">
                    <Register name="fp"/>
                    <Imm val="c"/>
                </Memory>
            </AsmAdd>
        </out>
    </tile>
</tiles>